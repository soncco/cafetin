extends layout

block content
  #container
    .pure-u-1
      .content
        h2 Bienvenido
        form.pure-form.pure-form-aligned(action='/login', method='POST')

          fieldset
            legend Iniciar sesi√≥n
            .pure-control-group
              label(for='username') Usuario:
              input#username(name='username', type='text', placeholder='Usuario', autocomplete='off')
            .pure-control-group
              label(for='password') Password:
              input#password(name='password', type='password', placeholder='Password')
            .pure-control-group
              label(for='local') Local:
              select#local
            .pure-controls
              button.pure-button.pure-button-primary.login(type='submit') Ingresar

    
